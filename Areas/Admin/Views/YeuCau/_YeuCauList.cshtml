<!-- CSS cho trạng thái active -->
<style>
    .btn-group .btn.active {
        background-color: aliceblue;
        color:black;
    }
</style>


<!-- HTML cho các nút lọc trạng thái -->
<div class="btn-group btn-white btn-secondary mb-4" role="group" aria-label="Filter Options">
    <button type="button" class="btn btn-white active" onclick="filterTable('', this)">Tất cả</button>
    <button type="button" class="btn btn-white" onclick="filterTable('Chờ xác nhận', this)">Chờ xác nhận</button>
    <button type="button" class="btn btn-white" onclick="filterTable('Đã xác nhận', this)">Đã xác nhận</button>
    <button type="button" class="btn btn-white" onclick="filterTable('Đã từ chối', this)">Đã từ chối</button>
</div>

<table id="yeuCauTable" class="table table-striped table-bordered display" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th style="width: 15%; text-align: center;">Tên khách hàng</th>
            <th style="width: 10%; text-align: center;">SDT</th>
            <th style="width: 15%; text-align: center;">Thời gian đặt</th>
            <th style="width: 13%; text-align: center;">Ngày sử dụng</th>
            <th style="width: 10%; text-align: center;">Giờ BD</th>
            <th style="width: 10%; text-align: center;">Giờ KT</th>
            <th style="width: 10%; text-align: center;">Mã SB</th>
            <th style="width: 10%; text-align: center;">Trạng thái</th>
            <th style="width: 7%; text-align: center;"></th>
        </tr>
    </thead>
    <tbody id="yeuCauList"></tbody>
</table>

<!-- Modal Bootstrap -->
<div class="modal fade" id="yeuCauModal" tabindex="-1" role="dialog" aria-labelledby="yeuCauModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="yeuCauModalLabel">Chi tiết yêu cầu đặt sân</h5>
                <button type="button" class="modalclose" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="modalContent"></div>
            </div>
        </div>
    </div>
</div>

